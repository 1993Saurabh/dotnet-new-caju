{
  "$schema": "http://json.schemastore.org/template",
  "author": "Ivan Paulovich",
  "classifications": [
    "Common",
    "Library",
    "Web API"
  ],
  "name": "Caju: Back-end with the awesome architectures made easy!",
  "identity": "Paulovich.Caju",
  "groupIdentity": "Paulovich.Caju",
  "shortName": "caju",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "MyProject",
  "preferNameDirectory": true,
  "symbols": {
    "architecture-style": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "clean",
      "choices": [
        {
          "choice": "clean",
          "description": "Clean Architecture"
        },
        {
          "choice": "hexagonal",
          "description": "Hexagonal Architecture"
        },
        {
          "choice": "eventsourcing",
          "description": "Event Sourcing"
        }
      ]
    },
    "use-cases": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "full",
      "choices": [
        {
          "choice": "full",
          "description": "Full Solution with Two Aggregates and reading and writing operations"
        },
        {
          "choice": "basic",
          "description": "Basic Read and Write Use Cases"
        },
        {
          "choice": "readonly",
          "description": "Read only Use Cases"
        },
        {
          "choice": "none",
          "description": "Without Use Cases"
        }
      ],
      "replaces": "use-cases",
      "onlyIf": [
        {
          "after": "\"use-cases\": \""
        }
      ]
    },
    "ui": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "webapi",
      "choices": [
        {
          "choice": "none",
          "description": "None"
        },
        {
          "choice": "webapi",
          "description": "Web API"
        },
        {
          "choice": "console",
          "description": "Console"
        },
        {
          "choice": "both",
          "description": "Web API and Console"
        }
      ],
      "replaces": "ui",
      "onlyIf": [
        {
          "after": "\"ui\": \""
        }
      ]
    },
    "data-access": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "mongo",
      "choices": [
        {
          "choice": "mongo",
          "description": "MongoDB"
        },
        {
          "choice": "entityframework",
          "description": "Entity Framework Core"
        },
        {
          "choice": "dapper",
          "description": "Dapper"
        },
        {
          "choice": "none",
          "description": "No frameworks"
        }
      ],
      "replaces": "data-access",
      "onlyIf": [
        {
          "after": "\"data-access\": \""
        }
      ]
    },
    "tips": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Includes architecture tips or not.",
      "defaultValue": "true",
      "replaces": "tips",
      "onlyIf": [
        {
          "after": "\"tips\": \""
        }
      ]
    },
    "service-bus": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "kafka",
      "choices": [
        {
          "choice": "kafka",
          "description": "Confluent.Kafka"
        },
        {
          "choice": "none",
          "description": "No frameworks"
        }
      ],
      "replaces": "service-bus",
      "onlyIf": [
        {
          "after": "\"service-bus\": \""
        }
      ]
    },
    "Empty": {
      "type": "computed",
      "value": "(use-cases == \"none\")"
    },
    "Basic": {
      "type": "computed",
      "value": "(use-cases == \"basic\")"
    },
    "ReadOnly": {
      "type": "computed",
      "value": "(use-cases == \"readonly\")"
    },
    "Full": {
      "type": "computed",
      "value": "(use-cases == \"full\")"
    },
    "Clean-Architecture": {
      "type": "computed",
      "value": "(architecture-style == \"clean\")"
    },
    "Hexagonal-Architecture": {
      "type": "computed",
      "value": "(architecture-style == \"hexagonal\")"
    },
    "Event-Sourcing-Architecture": {
      "type": "computed",
      "value": "(architecture-style == \"eventsourcing\")"
    },
    "UI-None": {
      "type": "computed",
      "value": "(ui == \"none\")"
    },
    "UI-Webapi": {
      "type": "computed",
      "value": "(ui == \"webapi\")"
    },
    "UI-Console": {
      "type": "computed",
      "value": "(ui == \"console\")"
    },
    "UI-Both": {
      "type": "computed",
      "value": "(ui == \"both\")"
    },
    "Mongo": {
      "type": "computed",
      "value": "(data-access == \"mongo\")"
    },
    "EntityFramework": {
      "type": "computed",
      "value": "(data-access == \"entityframework\")"
    },
    "Dapper": {
      "type": "computed",
      "value": "(data-access == \"dapper\")"
    },
    "Kafka": {
      "type": "computed",
      "value": "(service-bus == \"kafka\")"
    },
    "CloseAccount": {
      "type": "computed",
      "value": "(Full)"
    },
    "Deposit": {
      "type": "computed",
      "value": "(Full)"
    },
    "GetAccountDetails": {
      "type": "computed",
      "value": "(Full || ReadOnly)"
    },
    "GetCustomerDetails": {
      "type": "computed",
      "value": "(Full || ReadOnly || Basic)"
    },
    "Register": {
      "type": "computed",
      "value": "(Full || Basic)"
    },
    "Withdraw": {
      "type": "computed",
      "value": "(Full)"
    }
  },

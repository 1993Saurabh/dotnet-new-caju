{
  "$schema": "http://json.schemastore.org/template",
  "author": "Ivan Paulovich",
  "classifications": [
    "Common",
    "Library",
    "Web API"
  ],
  "name": "Caju: Back-end with the awesome architectures made easy!",
  "identity": "Paulovich.Caju",
  "groupIdentity": "Paulovich.Caju",
  "shortName": "caju",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "MyProject",
  "preferNameDirectory": true,
  "symbols": {
    "architecture-style": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "clean",
      "choices": [
        {
          "choice": "clean",
          "description": "Clean Architecture"
        },
        {
          "choice": "hexagonal",
          "description": "Hexagonal Architecture"
        },
        {
          "choice": "eventsourcing",
          "description": "Event Sourcing"
        }
      ]
    },
    "use-cases": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "full",
      "choices": [
        {
          "choice": "full",
          "description": "Full Solution with Two Aggregates and reading and writing operations"
        },
        {
          "choice": "basic",
          "description": "Basic Read and Write Use Cases"
        },
        {
          "choice": "readonly",
          "description": "Read only Use Cases"
        },
        {
          "choice": "empty",
          "description": "Without Use Cases"
        }
      ]
    },
    "ui": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "webapi",
      "choices": [
        {
          "choice": "none",
          "description": "None"
        },
        {
          "choice": "webapi",
          "description": "Web API"
        },
        {
          "choice": "console",
          "description": "Console"
        },
        {
          "choice": "both",
          "description": "Web API and Console"
        }
      ]
    },
    "infrastructure": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "mongodb",
      "choices": [
        {
          "choice": "mongodb",
          "description": "MongoDB"
        },
        {
          "choice": "sqlserver",
          "description": "Entity Framework and Dapper"
        }
      ]
    },
    "tips": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Includes architecture tips or not.",
      "defaultValue": "true"
    },
    "Empty": {
      "type": "computed",
      "value": "(use-cases == \"empty\")"
    },
    "Basic": {
      "type": "computed",
      "value": "(use-cases == \"basic\")"
    },
    "ReadOnly": {
      "type": "computed",
      "value": "(use-cases == \"readonly\")"
    },
    "Full": {
      "type": "computed",
      "value": "(use-cases == \"full\")"
    },
    "Clean-Architecture": {
      "type": "computed",
      "value": "(architecture-style == \"clean\")"
    },
    "Hexagonal-Architecture": {
      "type": "computed",
      "value": "(architecture-style == \"hexagonal\")"
    },
    "Event-Sourcing-Architecture": {
      "type": "computed",
      "value": "(architecture-style == \"eventsourcing\")"
    }
  },

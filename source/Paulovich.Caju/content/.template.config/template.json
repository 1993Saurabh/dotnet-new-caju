  "sourceName": "MyProject",
  "preferNameDirectory": true,
  "symbols": {
      "architecture-style": {
          "type": "parameter",
          "datatype": "choice",
          "defaultValue": "clean",
          "choices": [
              {
                  "choice": "clean",
                  "description": "Clean Architecture"
              },
              {
                  "choice": "hexagonal",
                  "description": "Hexagonal Architecture (Not implemented)"
              },
              {
                  "choice": "es",
                  "description": "Event Sourcing (Not implemented)"
              }
          ]
      },
      "use-cases": {
          "type": "parameter",
          "datatype": "choice",
          "defaultValue": "full",
          "choices": [
              {
                  "choice": "full",
                  "description": "Full Solution with Two Aggregates and reading and writing operations"
              },
              {
                  "choice": "basic",
                  "description": "Basic Read and Write Use Cases"
              },
              {
                  "choice": "readonly",
                  "description": "Read only Use Cases"
              },
              {
                  "choice": "empty",
                  "description": "Without Use Cases"
              }
          ]
      },
      "ui": {
          "type": "parameter",
          "datatype": "choice",
          "defaultValue": "webapi",
          "choices": [
              {
                "choice": "none",
                "description": "None"
              },
              {
                  "choice": "webapi",
                  "description": "Web API"
              },
              {
                  "choice": "console",
                  "description": "Console"
              },
              {
                  "choice": "both",
                  "description": "Web API and Console"
              }
          ]
      },
      "infrastructure": {
        "type": "parameter",
        "datatype": "choice",
        "defaultValue": "mongodb",
        "choices": [
            {
                "choice": "mongodb",
                "description": "MongoDB"
            },
            {
                "choice": "sqlserver",
                "description": "Entity Framework and Dapper"
            }
        ]
      },
      "skipRestore": {
          "type": "parameter",
          "datatype": "bool",
          "description": "If specified, skips the automatic restore of the Solution after create.",
          "defaultValue": "false"
      },
      "docs": {
          "type": "parameter",
          "datatype": "bool",
          "description": "If false, disables the automatic documentations tips.",
          "defaultValue": "true"
      },
      "Empty": {
          "type": "computed",
          "value": "(use-cases == \"empty\")"
      },
      "Basic": {
          "type": "computed",
          "value": "(use-cases == \"basic\")"
      },
      "ReadOnly": {
          "type": "computed",
          "value": "(use-cases == \"readonly\")"
      },
      "Full": {
          "type": "computed",
          "value": "(use-cases == \"full\")"
      },
      "Clean-Architecture": {
        "type": "computed",
        "value": "(architecture-style == \"clean\")"
      },
      "Hexagonal-Architecture": {
        "type": "computed",
        "value": "(architecture-style == \"hexagonal\")"
      },
      "Event-Sourcing-Architecture": {
        "type": "computed",
        "value": "(architecture-style == \"es\")"
      }
  },

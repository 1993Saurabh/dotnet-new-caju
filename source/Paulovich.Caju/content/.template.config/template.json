{
  "$schema": "http://json.schemastore.org/template",
  "author": "Ivan Paulovich",
  "classifications": [ "Common", "Library", "Web API" ], 
  "name": "Caju: Back-end with the awesome architectures made easy!",
  "identity": "Paulovich.Caju",         
  "groupIdentity":"Paulovich.Caju",
  "shortName": "caju",
  "tags": {
    "language": "C#",
    "type":"project"
  },
  "sourceName": "MyProject",
  "preferNameDirectory": true,
  "symbols":{
    "architecture-style":{
      "type":"parameter",
      "datatype": "choice",
      "defaultValue":"clean",
      "choices": [
        {
          "choice": "clean",
          "description": "Clean Architecture"
        },
        {
          "choice": "hexagonal",
          "description":"Hexagonal Architecture (Not implemented)"
        },
        {
          "choice":"es",
          "description":"Event Sourcing (Not implemented)"
        }
      ]
    },
	"use-cases":{
      "type":"parameter",
      "datatype": "choice",
      "defaultValue":"full",
      "choices": [
        {
          "choice": "full",
          "description": "Full Solution with Two Aggregates and reading and writing operations"
        },
        {
          "choice": "basic",
          "description":"Basic Read and Write Use Cases"
        },
        {
          "choice":"readonly",
          "description":"Read only Use Cases",
        },
        {
          "choice":"empty",
          "description":"Without Use Cases",
        }
      ]
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
	"Empty": {
      "type": "computed",
      "value": "(use-cases == \"empty\")"
    },
	"Basic": {
      "type": "computed",
      "value": "(use-cases == \"basic\")"
    },
	"ReadOnly": {
      "type": "computed",
      "value": "(use-cases == \"readonly\")"
    }
  },
  "sources": [
    {
	  "rename": {
        "MyProject.UI/autofac.empty.json": "MyProject.UI/autofac.json"
      },
      "modifiers": [
        {
          "condition": "(Empty)",
          "exclude": [		  
			"MyProject.UI/UseCases/Register/**/*.cs",
			"MyProject.UI/UseCases/Deposit/**/*.cs",
			"MyProject.UI/UseCases/Withdraw/**/*.cs",
			"MyProject.UI/UseCases/GetAccountDetails/**/*.cs",
            "MyProject.UI/UseCases/GetCustomerDetails/**/*.cs",
            "MyProject.UI/UseCases/CloseAccount/**/*.cs",
			
            "MyProject.UI/Model/**/*.cs",
            "MyProject.UI/Modules/**/*.cs",
			"MyProject.UI/autofac.json",
			
			"MyProject.Application/UseCases/Register/**/*.cs",
            "MyProject.Application/UseCases/Deposit/**/*.cs",
            "MyProject.Application/UseCases/Withdraw/**/*.cs",
            "MyProject.Application/UseCases/GetAccountDetails/**/*.cs",
            "MyProject.Application/UseCases/GetCustomerDetails/**/*.cs",
            "MyProject.Application/UseCases/CloseAccount/**/*.cs",
		
            "MyProject.Application/Outputs/**/*.cs",			
            "MyProject.Application/Repositories/**/*.cs",
			
            "MyProject.Domain/Accounts/**/*.cs",
            "MyProject.Domain/Customers/**/*.cs",
            "MyProject.Domain/ValueObjects/**/*.cs",
            
			"MyProject.Infrastructure/DataAccess/**/*.cs",
            "MyProject.Infrastructure/Mappings/**/*.cs"
          ]
        }
      ]
    }

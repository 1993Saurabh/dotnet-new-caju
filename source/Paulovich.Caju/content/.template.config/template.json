{
  "$schema": "http://json.schemastore.org/template",
  "author": "Ivan Paulovich",
  "classifications": [ "Common", "Library", "Web API" ], 
  "name": "Caju: Back-end with the awesome architectures made easy!",
  "identity": "Paulovich.Caju",         
  "groupIdentity":"Paulovich.Caju",
  "shortName": "caju",
  "tags": {
    "language": "C#",
    "type":"project"
  },
  "sourceName": "MyProject",
  "preferNameDirectory": true,
  "symbols":{
    "register":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "true"
    },
    "deposit":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "true"
    },
	"withdraw":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "true"
    },
	"getaccount":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "true"
    },
	"getcustomer":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "true"
    },
	"closeaccount":{
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "true"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!register)",
          "exclude": [
            "MyProject.Application/UseCases/Register/**/*",
            "MyProject.UI/UseCases/Register/**/*"
          ]
        },
        {
          "condition": "(!deposit)",
          "exclude": [
            "MyProject.Application/UseCases/Deposit/**/*",
            "MyProject.UI/UseCases/Deposit/**/*"
          ]
        },
        {
          "condition": "(!withdraw)",
          "exclude": [
            "MyProject.Application/UseCases/Withdraw/**/*",
            "MyProject.UI/UseCases/Withdraw/**/*"
          ]
        },
        {
          "condition": "(!getaccount)",
          "exclude": [
            "MyProject.Application/UseCases/GetAccountDetails/**/*",
            "MyProject.UI/UseCases/GetAccountDetails/**/*"
          ]
        },
        {
          "condition": "(!getcustomer)",
          "exclude": [
            "MyProject.Application/UseCases/GetCustomerDetails/**/*",
            "MyProject.UI/UseCases/GetCustomerDetails/**/*"
          ]
        },
        {
          "condition": "(!closeaccount)",
          "exclude": [
            "MyProject.Application/UseCases/CloseAccount/**/*",
            "MyProject.UI/UseCases/CloseAccount/**/*"
          ]
        },
        {
          "condition": "(!closeaccount && !getcustomer && !getaccount && !withdraw && !deposit && !register)",
          "exclude": [
            "MyProject.Application/Outputs/**/*",
            "MyProject.Application/Repositories/**/*",
            "MyProject.Domain/Accounts/**/*",
            "MyProject.Domain/Customers/**/*",
            "MyProject.Domain/ValueObjects/**/*",
            "MyProject.Infrastructure/DataAccess/**/*",
            "MyProject.Infrastructure/Mappings/**/*",
            "MyProject.UI/Model/**/*",
            "MyProject.UI/Modules/**/*"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        { "text": "Run 'dotnet restore'" }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }]
}